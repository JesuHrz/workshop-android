<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto"
            android:layout_width="219dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="PALABRA 1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite el valor"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="PALABRA 2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite el valor"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnmayor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mayor" />

        <Button
            android:id="@+id/btnlongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LONGITUD" />

        <Button
            android:id="@+id/btnvocales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUITAR VOCALES" />

        <Button
            android:id="@+id/btninvertir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVERTIR" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/edtmaymin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAY/MINx" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="INHABILITAR BOTONES"
            android:textOn="HABILITAR BOTONES"
            tools:text="INHABILITAR BOTONES" />
    </LinearLayout>

</LinearLayout>